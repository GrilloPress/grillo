    %h3.h4.title
      Backlog
  %div.research
    %h3.h4.title
      Research
  %div.design
    %h3.h4.title
      Design
    %div.inner-row
      %h4
        Prototype
    %div.inner-row
      %h4
        Refine
  %div.review
    %h3.h4.title
      Review
    %div.inner-row
      %h4
        Design
    %div.inner-row
      %h4
        Project
    %div.inner-row
      %h4
        External
  %div.done
    %h3.h4.title
      Done
    %div.inner-row
      %h4
        Documented
    %div.inner-row
      %h4
        Shared
    %div.inner-row
